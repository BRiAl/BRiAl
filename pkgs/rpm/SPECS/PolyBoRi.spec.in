BuildRequires: scons boost-devel gcc python doxygen

Requires: python >= 2.4
Requires: IPython >= 0.6
Requires: boost >= 1.33

Summary: Framework for Boolean Rings
Name: PolyBoRi
Version: $PBVERSION
Release: $PBRELEASE
License: GPL3
Group:	Applications/Math
Group(de): Anwendungen/Mathematik
URL: http://polybori.sf.net
Source0: %{name}-%{version}.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root


%define pbori_prefix %{_prefix}
%define pbori_pyprefix %{py_prefix}
%define pbori_eprefix %{_bindir}

%define pbori_instdir %{_datadir}/%{name}
%define pbori_docpath docs


%description

%prep
%setup -q

%build
scons -j 5 prepare-install

%install
scons install EPREFIX=$RPM_BUILD_ROOT/%{pbori_eprefix} \
              PYPREFIX=$RPM_BUILD_ROOT/%{pbori_pyprefix} \
              INSTALLDIR=$RPM_BUILD_ROOT/%{pbori_instdir} \
              DOCDIR=%{pbori_docpath} 



%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)
%doc README LICENSE %{pbori_docpath}/*


%attr(755, root, root) %{pbori_eprefix}/ipbori

%{pbori_instdir}


